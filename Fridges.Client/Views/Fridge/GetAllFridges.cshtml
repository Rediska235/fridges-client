@using Fridges.Client.Models.Entities;

@model IEnumerable<Fridge>
@{
    ViewData["Title"] = "Fridges";
}

<div>
    <h1 class="text-center">Fridges</h1>
</div>

<div id="view-all">
    <div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Owner name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><a href="fridges/@item.Id">@item.Name</a></td>
                    <td>@item.OwnerName</td>
                    <td>
                        <div class="btn-group">
                            <a onclick="showInPopup('@Url.Action("Edit", "Fridge", new { Id= item.Id })','Edit fridge')" class="btn btn-warning">Edit</a>
                            <form asp-action="Delete" method="post" asp-route-id="@item.Id" onsubmit="jQueryAjaxDelete(this)">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>

<a onclick="showInPopup('@Url.Action("Create")','New fridge')" class="btn btn-success">Create new fridge</a>
