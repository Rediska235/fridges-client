@using Fridges.Client.Models.Entities;

@model IEnumerable<Fridge>
@{
    ViewData["Title"] = "Fridges";
}

<div class="d-flex justify-content-between p-3">
    <h2>Fridges</h2>
    <a onclick="showInPopup('@Url.Action("Create")','New fridge')" class="btn btn-success">Create new fridge</a>
</div>

<div id="view-all">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Owner name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a href="fridges/@item.Id" class="text-black">@item.Name</a></td>
                        <td>@item.OwnerName</td>
                        <td>
                            <div class="btn-group">
                                <a onclick="showInPopup('@Url.Action("Edit", "Fridge", new { Id= item.Id })','Edit fridge')" class="btn btn-warning">Edit</a>
                                <button class="btn btn-danger" onclick="jQueryAjaxDelete('fridges/delete/@item.Id', 'fridge')">Delete</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

